<Page x:Class="Dictionary_MVP.Pages.FinalScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary_MVP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FinalScreen">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="White"/>
        </Grid.Background>

        <Button x:Name="Back" Content="&lt;" 
                Width="50" Height="50" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Click="Back_Click" FontFamily="Arial Black" Foreground="#FF006699" FontSize="24" BorderBrush="#00707070" Background="#00DDDDDD" Margin="10,0,0,0"/>
        <TextBlock Foreground="#FF006699" Margin="100,160,70,35" TextWrapping="Wrap" Text="{Binding Path=Message}" Height="255" Width="630" FontSize="36" TextAlignment="Center" FontFamily="Arial Black"/>

    </Grid>
</Page>
